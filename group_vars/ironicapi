---
monit_monitoring_list:
  - name: ironic-api
    type: process
    target: "{{ironic_api_pidfile}}"
    start:
      script: "service start ironic-api"
    stop: 
      script: "service stop ironic-api"
    rules:
      - "if failed port 6385 type tcp then restart"
      - "if 3 restarts within 3 cycles then timeout"

